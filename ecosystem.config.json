{
  "apps": [
    {
      "name": "mgap-backend",
      "script": "src/server.js",
      "cwd": "/var/www/mgap-backend",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "log_file": "/var/log/mgap/combined.log",
      "out_file": "/var/log/mgap/out.log",
      "error_file": "/var/log/mgap/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs"
      ],
      "min_uptime": "10s",
      "max_restarts": 10
    }
  ]
}